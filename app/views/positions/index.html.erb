<p id="notice"><%= notice %></p>

<h1>Positions</h1>

<table>
  <thead>
    <tr>
      <th>Id tournament</th>
      <th>Id team</th>
      <th>Points</th>
      <th>Played</th>
      <th>Won</th>
      <th>Tied</th>
      <th>Lost</th>
      <th>Goals converted</th>
      <th>Goals received</th>
      <th>Goals diference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.id_tournament %></td>
        <td><%= position.id_team %></td>
        <td><%= position.points %></td>
        <td><%= position.played %></td>
        <td><%= position.won %></td>
        <td><%= position.tied %></td>
        <td><%= position.lost %></td>
        <td><%= position.goals_converted %></td>
        <td><%= position.goals_received %></td>
        <td><%= position.goals_diference %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

